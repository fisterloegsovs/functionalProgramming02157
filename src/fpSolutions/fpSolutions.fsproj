<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <AssemblyName>fpSolutions</AssemblyName>
    <RootNamespace>fpSolutions</RootNamespace>
    <GenerateAssemblyInfo>true</GenerateAssemblyInfo>
  </PropertyGroup>

  <ItemGroup>
    <!-- Include exercise source files -->
    <Compile Include="..\exercises\**\*.fs" />
    <!-- Include exam source files (compile before Program.fs) -->
    <Compile Include="..\exams\**\*.fs" />
    <Compile Include="Program.fs" />
  </ItemGroup>

</Project>
